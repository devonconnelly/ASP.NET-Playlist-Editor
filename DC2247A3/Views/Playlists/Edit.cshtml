@model DC2247A3.Models.PlaylistEditTracksFormViewModel

@{
    ViewBag.Title = "Edit playlist";
}

<h2>@ViewBag.Title  <span class="bg-info-subtle">@Html.DisplayFor(model => model.Name)</span></h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div>
    <h5>Select tracks, and click the "Save changes" button</h5>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="row mb-3">
        <div class="col">
            <input type="submit" value="Save changes" class="btn btn-outline-dark" />
            @Html.ActionLink("Back to Details", "Details", new { id = Model.PlaylistId }) |
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
    <hr />
</div>

    <div class="row">
        <div class="col-md-6">
            <h5>All tracks</h5>
            @foreach (var track in Model.AvailableTracks)
            {
                <div class="form-check">
                    <input type="checkbox"
                           name="SelectedTrackIds"
                           value="@track.Value"
                           class="form-check-input"
                           @(Model.SelectedTrackIds.Contains(int.Parse(track.Value)) ? "checked" : "") />
                    <label class="form-check-label">@track.Text</label>
                </div>
            }
        </div>
        <div class="col-md-6">
            <div class="card bg-light">
                <div class="card-body">
                    <h5>Now on playlist <span class="badge rounded-pill text-bg-secondary">@Html.DisplayFor(model => model.Tracks.Count)</span></h5>
                    @foreach (var track in Model.Tracks)
                    {
                        <span>@track.NameShort</span><br />
                    }
                </div>
            </div>
        </div>
    </div>
}

<div>
    
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
